<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="PINView.Maui.Samples.Views.SampleViews.DotSizeSampleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pinView="clr-namespace:PINView.Maui;assembly=PINView.Maui"
    xmlns:system="clr-namespace:System;assembly=netstandard">
    <ContentView.Content>
        <Border Style="{StaticResource SampleViewsContainerBorderStyle}">
            <StackLayout>

                <Label Style="{StaticResource SampleViewsHeaderLabelStyle}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="DotSize" />
                            <Span Text="{x:Static system:Environment.NewLine}" />
                            <Span FontSize="Small" Text="Type : double" />
                            <Span Text="{x:Static system:Environment.NewLine}" />
                            <Span FontSize="Small" Text="Applicable only if IsPassword=True" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <StackLayout Padding="0,20">

                    <Label HorizontalTextAlignment="Center" Text="DotSize = 15" />
                    <pinView:PINView
                        BoxShape="Circle"
                        DotSize="15"
                        IsPassword="True"
                        PINLength="5"
                        PINValue="12345"
                        Style="{StaticResource PINViewStyle}" />

                    <Label
                        Margin="0,15,0,0"
                        HorizontalTextAlignment="Center"
                        Text="DotSize = 20  (Default)" />
                    <pinView:PINView
                        BoxShape="Circle"
                        IsPassword="True"
                        PINValue="1234"
                        Style="{StaticResource PINViewStyle}" />

                    <Label
                        Margin="0,15,0,0"
                        HorizontalTextAlignment="Center"
                        Text="DotSize = 25" />
                    <pinView:PINView
                        BoxShape="Circle"
                        DotSize="25"
                        IsPassword="True"
                        PINLength="5"
                        PINValue="12345"
                        Style="{StaticResource PINViewStyle}" />
                </StackLayout>
            </StackLayout>
        </Border>
    </ContentView.Content>
</ContentView>
